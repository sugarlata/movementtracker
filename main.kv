NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer

    BoxLayout:
        orientation: 'vertical'


        Toolbar:
            id: toolbar
            title: 'Swappy'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
            right_action_items: [['dots-vertical', lambda x: app.r_menu(self.ids['right_actions'])]]

        ScreenManager:
            id: scn_base


            GoalDash:
                id: dash_base
                app_class: app
                name: 'Dashboard Screen'
                manager: scn_base

            ChartDash:
                id: chart_dash
                name: 'Chart Dashboard'
                manager: scn_base

            AddEntry:
                id: add_entry
                app_class: app
                name: 'Add Entry Screen'
                manager: scn_base

            HabitListScreen:
                id: habit_list_screen
                name: 'Habit List Screen'
                manager: scn_base

            HabitConfigScreen:
                id: habit_config_screen
                name: 'Habit Config Screen'
                manager: scn_base
                window_root: root








