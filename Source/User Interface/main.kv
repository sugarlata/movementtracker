NavigationLayout:
    id: nav_layout
    MDNavigationDrawer:
        id: nav_drawer

        NavigationDrawerToolbar:
            title: 'Movement Tracker'

        NavigationDrawerIconButton:
            icon: 'account'
            text: 'Login Screen'
            on_release: app.navigate_to('Login Screen', 'right')




    BoxLayout:
        orientation: 'vertical'


        Toolbar:
            id: toolbar
            title: 'Movement Tracker'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: app.root.toggle_nav_drawer()]]
            right_action_items: [['dots-vertical', lambda x: app.r_menu(self.ids['right_actions'])]]

        ScreenManager:
            id: scn_base


            LoginScreen:
                id: login_scn
                app_class: app
                name: 'Login Screen'
                manager: scn_base







